@{
}
@model NetCoreAssignment.Models.Entities.Product
<h1>Edit Product</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly></input>
    </div>
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"></input>
    </div>
    <div class="mt-3">
        <label class="form-label">Cost</label>
        <input type="number" class="form-control" asp-for="Cost"></input>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Edit</button>
        <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Product">Delete</button>
    </div>
</form>