@model NetCoreAssignment.Models.AddProductViewModel
<h1>Add Product</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"></input>
    </div>
    <div class="mt-3">
        <label class="form-label">Cost</label>
        <input type="number" class="form-control" asp-for="Cost"></input>
    </div>
