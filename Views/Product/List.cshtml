@{
}
@model List<NetCoreAssignment.Models.Entities.Product>
<h1>Products</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Cost</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Cost</td>
                <td>
                    <a>Edit</a>
                    <a>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>